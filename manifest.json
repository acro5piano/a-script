{
  "manifest_version": 2,
  "author": "kazuya gosho",
  "name": "google-map-scraping-clipboard",
  "description": "a script. do not use this.",
  "version": "0.0.1",
  "homepage_url": "https://github.com/acro5piano/a-script",
  "browser_action": {
    "default_icon": "icon-off.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "https://www.google.com/maps/search/*",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
